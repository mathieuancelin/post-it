{
  "name": "post-it",
  "version": "1.0.0",
  "description": "A simple electron app to take notes written with markdown",
  "main:babel": "src/es6/backend/index.js",
  "main": "src/es5/backend/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "babel src/es6 --watch --out-dir src/es5",
    "build": "npm run babel-build && npm run build-dist",
    "babel-build": "babel src/es6 --out-dir src/es5",
    "cleanup": "rm -rf dist && rm -rf app",
    "build-dist": "npm run prepare-build && npm run build-mac && npm run build-win && npm run build-linux && rm -rf app",
    "prepare-build": "npm run cleanup && mkdir app && cp package.json app && cp -r src app && cp -r node_modules app",
    "build-win": "electron-packager app PostIt --out=dist --platform=win32 --arch=x64 --version=0.37.5 --asar=true --cache=./cache --name=PostIt --overwrite=true",
    "build-mac": "electron-packager app PostIt --out=dist --platform=darwin --arch=x64 --version=0.37.5 --asar=true --icon=./src/es6/static/notepad --cache=./cache --name=PostIt --overwrite=true",
    "build-linux": "electron-packager app PostIt --out=dist --platform=linux --arch=x64 --version=0.37.5 --asar=true --icon=./src/es6/static/notepad --cache=./cache --name=PostIt --overwrite=true"
  },
  "keywords": [
    "electron",
    "react",
    "notes"
  ],
  "author": "Mathieu ANCELIN",
  "license": "MIT",
  "dependencies": {
    "electron-positioner": "^3.0.0",
    "es6-shim": "^0.35.1",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "showdown": "^1.4.2"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.10.1",
    "babel-core": "^6.10.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "electron-packager": "^7.3.0",
    "electron-prebuilt": "^1.2.7"
  }
}
